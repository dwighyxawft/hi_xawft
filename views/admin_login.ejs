<!DOCTYPE html>
<html>
<head>
  <title>Login - xawftly</title>
  <link rel="stylesheet" href="/css/login.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/popper2.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
  <header>
    <h1>XAWFTLY</h1>
    <nav>
      <ul>
        <li><a href="/wallet/">Home</a></li>
        <li><a href="/wallet/features">Features</a></li>
        <li><a href="/wallet/contact">Contact</a></li>
      </ul>
    </nav>
  </header>

  <section id="login">
    <div class="container">
      <h2>Admin Login Form</h2>
      <form id="loginForm">
        <div class="form-group">
          <label for="username">Email</label>
          <input type="email" id="email" name="email" required placeholder="example@hotmail.com">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required>
        </div>
        <div class="form-group">
          <input type="submit" value="Login" class="btn">
        </div>
      </form>
    </div>
  </section>

  <footer>
    <div class="container">
      <p>&copy; 2023 xawftly wallet. All rights reserved.</p>
    </div>
  </footer>

  <script>
    $(document).ready(function(){
      $("form#loginForm").on("submit", function(e){
        e.preventDefault();
        $.ajax({
          url: "/wallet/admin/login",
          type: "post",
          data: $(this).serialize(),
          dataType: "json",
          success: function(data){
            if(data.status){
              location.href = "/wallet/admin/dashboard/1"
            }else{
              alert(data.msg)
            }
          }
        })
      })
    })
  </script>
</body>
</html>
