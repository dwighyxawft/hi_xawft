<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Admin</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/popper2.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
    <header>
        <div class="header-container">
            <h2>XAWFTLY Admin</h2>
            <nav>
                <ul>
                    <li><a href="/wallet/admin/dashboard/1">Dashboard</a></li>
                    <li><a href="/wallet/admin/settings">Settings</a></li>
                    <li><a href="/wallet/admin/add-admin">Add Admin</a></li>
                    <li><a href="/wallet/admin/logout">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>
<div class="container mt-5">
    <h2>Add Admin</h2>
    <form id="adminForm" method="post">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="gender">Gender:</label>
            <select class="form-control" id="gender" name="gender" required>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </div>
        <div class="form-group">
            <label for="phone">Phone:</label>
            <input type="text" class="form-control" id="phone" name="phone" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <button type="submit" class="btn btn-secondary mb-4 mt-3">Add Admin</button>
    </form>
</div>
<footer>
    <div class="footer-container">
        <p>&copy; 2023 XAWFTLY. All rights reserved.</p>
        <p><a href="#">Privacy Policy</a> | <a href="#">Terms & Conditions</a></p>
    </div>
</footer>
<script>
    $(document).ready(function(){
        $("#adminForm").on("submit", function(e){
            e.preventDefault();
            $.ajax({
                url: "/wallet/admin/add",
                type: "post",
                data: $(this).serialize(),
                dataType: "json",
                success: function(data){
                    if(data.status){
                        alert(data.msg)
                    }
                }
            })
        })
    })
</script>
</body>
</html>
