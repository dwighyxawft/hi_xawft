<!DOCTYPE html>
<html>
<head>
    <title>Reset Password - XAWFTLY</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery-3.5.1.min.js"></script>
</head>
<body>
    <header>
        <h1>XAWFTLY</h1>
        <nav>
            <ul>
                <li><a href="/wallet/">Home</a></li>
                <li><a href="/wallet/features">Features</a></li>
                <li><a href="/wallet/contact">Contact</a></li>
                <li><a href="/wallet/login">Login</a></li>
                <li><a href="/wallet/signup">Signup</a></li>
            </ul>
        </nav>
    </header>

    <section id="reset-password">
        <div class="container">
            <h2>Reset Password</h2>
            <p>Enter your new password below.</p>

            <form id="reset" method="post">
                <div class="form-group">
                    <label for="newPassword">New Password:</label>
                    <input type="password" id="newPassword" name="new_pass" required>
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm New Password:</label>
                    <input type="password" id="confirmPassword" name="confirm_pass" required>
                </div>
                <div class="form-group">
                    <input type="hidden" id="u_str" name="u_str" value="<%= u_str %>" required>
                    <input type="hidden" id="id" name="id" value="<%= id %>" required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Reset Password">
                </div>
            </form>
        </div>
    </section>

    <footer>
        <div class="container">
            <p>&copy; 2023 XAWFTLY Wallet. All rights reserved.</p>
        </div>
    </footer>
    <script>
        $(document).ready(function(){
            $("#reset").on("submit", function(e){
                e.preventDefault();
                $.ajax({
                    url: "/wallet/get_new_pass",
                    type: "post",
                    data: $(this).serialize(),
                    dataType: "json",
                    success: function(data){
                        alert(data.msg);
                    }
                })
            })
            
        })
    </script>
</body>
</html>
